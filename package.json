{
  "name": "onchain-listener",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "devDependencies": {
    "@bull-board/api": "^6.16.2",
    "@bull-board/hono": "^6.16.2",
    "@hono/node-server": "^1.19.8",
    "@types/bun": "latest",
    "dotenv": "^17.2.2",
    "rimraf": "^6.1.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@coinbase/onchainkit": "^0.38.19",
    "@types/node-telegram-bot-api": "^0.64.13",
    "@types/ws": "^8.18.1",
    "alchemy-sdk": "^3.6.3",
    "bullmq": "^5.58.5",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.5",
    "ethers": "^6.15.0",
    "hono": "^4.9.5",
    "ioredis": "^5.7.0",
    "nanoid": "^5.1.5",
    "node-telegram-bot-api": "^0.67.0",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "viem": "^2.44.4",
    "ws": "^8.18.3",
    "zod": "^3.24.2"
  },
  "scripts": {
    "start": "bun index.ts",
    "lint": "bunx eslint . --ext .ts,.tsx",
    "format": "bunx prettier --check .",
    "format:fix": "bunx prettier --write .",
    "typecheck": "tsc --noEmit",
    "build": "rm -rf dist && bun build index.ts drizzle.config.ts --outdir=dist --target=bun --splitting",
    "dev": "bun --watch index.ts",
    "db:check": "drizzle-kit push:pg --dry-run",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:generate-custom": "drizzle-kit generate --custom",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio --port=5555",
    "health:check": "curl -sf http://localhost:${PORT:-4000}/health"
  }
}
